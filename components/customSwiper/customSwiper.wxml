<swiper
 indicator-dot="{{false}}"
 autoplay="{{false}}"
 circular="true"
 class="swiper-block"
 bindchange="swiperChange"
 previous-margin="100rpx"
 next-margin="100rpx"
 current="{{0}}"
>
	<block
	 wx:for="{{imgUrls}}"
	 wx:for-index="index"
	 wx:key="index"
	>
		<swiper-item class="swiper-item" item-id="{{item.name}}">
			<image
			 mode="aspectFill"
			 src="{{item.url}}"
			 class="slide-image {{currentIndex == index ? 'active' : 'common'}}"
			/>
		</swiper-item>
	</block>
</swiper>
<view class="dots-box own-class">
	<view
	 class="dots {{currentIndex == index ? 'active' : ''}}"
	 wx:for="{{ imgUrls }}"
	 wx:key="index"
	></view>
</view>

